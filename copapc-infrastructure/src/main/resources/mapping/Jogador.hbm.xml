<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="copapc.model.jogador.Jogador" entity-name="Jogador" table="jogador">
    <cache usage="read-only" />

    <id name="id" column="id" unsaved-value="none">
      <generator class="org.hibernate.id.IdentityGenerator" />
    </id>

    <property name="nome">
      <column name="nome" length="80" not-null="true" />
    </property>

    <property name="email">
      <column name="email" length="80" not-null="true" unique-key="uk-jogador-email" />
    </property>

    <property name="pontuacao">
      <column name="pontuacao" length="1" />
    </property>

  </class>
</hibernate-mapping>