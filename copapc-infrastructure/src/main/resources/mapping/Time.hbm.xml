<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="copapc.model.time.Time" entity-name="Time" table="time">
    <cache usage="read-only" />

    <id name="id" column="id" unsaved-value="none">
      <generator class="org.hibernate.id.IdentityGenerator" />
    </id>

    <property name="nome">
      <column name="nome" not-null="true" length="50" />
    </property>

    <property name="numero">
      <column name="numero" not-null="true" unique-key="uk_numero_time" />
    </property>

    <many-to-one name="responsavel" entity-name="Jogador" foreign-key="fk_time_responsavel">
      <column name="responsavel_id" />
    </many-to-one>

    <set name="jogadores" table="time_jogadores">
      <key foreign-key="fk_time_jogador">
        <column name="time_id" not-null="true" unique-key="uk_jogador_time" />
      </key>
      <many-to-many entity-name="Jogador" foreign-key="fk_time_jogador">
        <column name="jogador_id" not-null="true" unique-key="uk_jogador_time" />
      </many-to-many>
    </set>

  </class>
</hibernate-mapping>